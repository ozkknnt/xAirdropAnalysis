# Runtime
NODE_ENV=development
TZ=Asia/Tokyo
USE_DUMMY_DATA=true
DRY_RUN=false

# X API auth (OAuth2 User Context preferred, App-only bearer fallback)
# Preferred: OAuth2 User Context access token with required scopes
X_OAUTH2_ACCESS_TOKEN=
# Fallback: App-only bearer token
X_BEARER_TOKEN=

# Optional (for future token refresh flow)
X_OAUTH2_CLIENT_ID=
X_OAUTH2_CLIENT_SECRET=
X_OAUTH2_REFRESH_TOKEN=

# X List IDs
X_LIST_ID_EVM=
X_LIST_ID_SOL=
X_LIST_ID_SECURITY=

# Fetch behavior
X_FETCH_MAX_PAGES=3
X_FETCH_PAGE_SIZE=100

# Discord
DISCORD_WEBHOOK_URL=

# Scoring threshold
SCORE_MIN=8
